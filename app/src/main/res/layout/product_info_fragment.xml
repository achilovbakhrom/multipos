<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="43">



    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="57"
        android:background="@color/colorBackgroundGrey"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty_dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingRight="@dimen/ten_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:text="Recent results"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/eighteen_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="@dimen/five_dp">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/group" />

                    <ImageView
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:src="@drawable/dots"
                        android:tint="@color/colorTintGrey" />

                </LinearLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="@drawable/top_fade" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@drawable/edit_text_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/thirty_dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="@dimen/thirty_dp"
                    android:paddingTop="@dimen/thirty_dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/grey_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="195dp"
                            android:layout_height="195dp"
                            android:padding="1dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingRight="@dimen/ten_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:text="Coca Cola 1.5L"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/eighteen_dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:text="Bell and Bobs"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/eighteen_dp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="125dp"
                            android:layout_gravity="left"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingRight="@dimen/ten_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:text=""
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/eighteen_dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_pointer" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:gravity="left"
                        android:paddingBottom="@dimen/five_dp"
                        android:paddingTop="@dimen/five_dp"
                        android:text="Quantity"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/remove_circle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/thirty_eight_dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_circle" />
                    </LinearLayout>


                    <com.jim.mpviews.MpButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:text="Set Quantity"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/colorTintGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jim.mpviews.MpButton
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginRight="@dimen/fifteen_dp"
                        android:text="Special Price"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />

                    <com.jim.mpviews.MpButton
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginRight="@dimen/fifteen_dp"
                        android:text="Discount item"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />

                    <com.jim.mpviews.MpButton
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:text="Remove Tax"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />

                </LinearLayout>

                <com.jim.mpviews.MpButton
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:text="Some"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/eighteen_dp" />

                <com.jim.mpviews.MpEditText
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:gravity="top"
                    android:hint="Special Request" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>