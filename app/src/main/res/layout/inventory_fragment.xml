<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:background="#fdfdfd"
            android:orientation="horizontal">


            <TextView
                android:layout_width="@dimen/three_hundred_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Product"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp"/>

            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"/>

            <TextView
                android:layout_width="@dimen/two_hundred_sixty_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/twenty_dp"
                android:text="Vendor"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp"/>

            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"/>

            <TextView
                android:layout_width="@dimen/hundred_sixty_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Low \n Stock Alert"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp"/>

            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"/>

            <TextView
                android:layout_width="@dimen/two_hundred_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Inventory"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp"/>

            <TextView
                android:layout_width="@dimen/hundred_ten_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Unit"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp"/>

            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Operations"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/colorGrey"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>