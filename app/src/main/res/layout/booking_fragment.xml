<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/thirty_five_dp"
        android:layout_marginRight="@dimen/thirty_five_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@drawable/rounded_edit_text_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_five_dp"
            android:background="@drawable/rounded_blue_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:paddingLeft="@dimen/thirty_dp"
                android:paddingTop="@dimen/fifteen_dp"
                android:text="Booking"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/twenty_four_dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/hundred_ten_dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Status"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"/>

                <TextView
                    android:layout_width="@dimen/hundred_thirty_dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Overhead"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"/>

                <TextView
                    android:layout_width="@dimen/two_hundred_seventy_five_dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="@dimen/twenty_dp"
                    android:text="Vendor"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"/>

                <TextView
                    android:layout_width="@dimen/two_hundred_dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Booking amount"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"/>

                <TextView
                    android:layout_width="@dimen/two_hundred_dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Booking date"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"/>

                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Left date"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"/>

                <TextView
                    android:layout_width="@dimen/hundred_ten_dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Action"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"/>

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>