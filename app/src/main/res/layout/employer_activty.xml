<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="43">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_weight="1"
                    android:text="Emp Name"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:src="@drawable/payments_btn" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:src="@drawable/currency_btn" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:text="Should works (Hours)"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="10 H"
                        android:textColor="@color/colorMainText"
                        android:textSize="32dp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/colorTextHint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:text="Actually work (Hours)"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="8.5 H"
                        android:textColor="@color/colorMainText"
                        android:textSize="32dp"/>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:text="Salary (Month)"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="800 000 uzs"
                        android:textColor="@color/colorMainText"
                        android:textSize="32dp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/colorTextHint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:text="Actually salary (Hours)"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/eighteen_dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="680 000 uzs"
                        android:textColor="@color/colorMainText"
                        android:textSize="32dp" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twenty_five_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/five_dp"
                    android:gravity="right"
                    android:text="Department:"
                    android:textSize="@dimen/eighteen_dp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fifteen_dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/dash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:gravity="right"
                    android:text="Cashier"
                    android:textSize="@dimen/eighteen_dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/thirty_dp"
            android:gravity="right"
            android:orientation="horizontal"

            >

            <com.jim.mpviews.MpButton
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/fifteen_dp"
                android:text="History"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpButton
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:text="Pay"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="57">


        <com.jim.mpviews.calendar.MpCalendarView
            android:id="@+id/mpCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorTextHint" />


    </RelativeLayout>


</LinearLayout>