<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_five_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/two_hundred_seventy_five_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/thirty_dp"
            android:text="20:20 09.12.2017"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorTextHint" />

        <TextView
            android:layout_width="@dimen/two_hundred_seventy_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/thirty_dp"
            android:text="15004 (Coca cola)"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorTextHint" />

        <TextView
            android:layout_width="@dimen/two_hundred_five_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="@dimen/fifteen_dp"
            android:text="18 000 uzs"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorTextHint" />

        <TextView
            android:layout_width="@dimen/hundred_ninety_five_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="@dimen/fifteen_dp"
            android:text="10%"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorTextHint" />

        <TextView
            android:layout_width="@dimen/two_hundred_twenty_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="@dimen/fifteen_dp"
            android:text="20 000 uzs"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorTextHint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:src="@drawable/delete_blue" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorTextHint" />
</LinearLayout>