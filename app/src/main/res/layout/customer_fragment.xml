<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/thirty_five_dp"
        android:layout_marginRight="@dimen/thirty_five_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@drawable/rounded_edit_text_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_five_dp"
            android:background="@drawable/rounded_blue_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:paddingLeft="@dimen/thirty_dp"
                    android:paddingTop="@dimen/fifteen_dp"
                    android:text="Customers (Add and Edit)"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/twenty_dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/seven_hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:paddingLeft="@dimen/thirty_dp"
                    android:paddingTop="@dimen/fifteen_dp"
                    android:text="Group:"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/five_dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/twenty_dp"
                    android:textStyle="bold" />

                <com.jim.mpviews.MpSpinner
                    android:id="@+id/mpSp"
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="@dimen/twenty_eight_dp"
                    app:sp_bg="@drawable/blue_sp_bg"
                    app:img_color="@drawable/arrow_down_white"
                    app:text_color="@color/colorWhite"
                    android:layout_marginBottom="@dimen/three_dp"
                    android:layout_gravity="center" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:paddingLeft="@dimen/thirty_dp"
                    android:text="ID client"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Full name"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QR-code"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Customer group"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="@dimen/thirty_dp"
                    android:text="Action"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <com.jim.mpviews.MpEditText
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:hint="02"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:hint="Name"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Number"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Short"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpEditText
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/refresh"
                android:drawableTint="@color/colorBlue"
                android:gravity="center_vertical"
                android:hint="Short"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpSpinner
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_weight="1"
              />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty_five_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:paddingRight="@dimen/ten_dp"
                android:src="@drawable/add_round"
                android:tint="@color/colorBlue" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>