<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:layout_marginLeft="@dimen/fifty_dp"
                    android:layout_marginTop="@dimen/thirty_five_dp"
                    android:text="Default parent value"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/eighteen_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:text="Size: 30"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/eighteen_dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:text="Color: Black"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/eighteen_dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:layout_marginLeft="@dimen/fifty_dp"
                    android:layout_marginTop="@dimen/forty_dp"
                    android:text="Size (1st Attribute)"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/eighteen_dp" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingRight="@dimen/ten_dp"
                    android:paddingTop="@dimen/five_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:layout_marginLeft="@dimen/fifty_dp"
                    android:layout_marginTop="@dimen/forty_dp"
                    android:text="Color (2nd Attribute)"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/eighteen_dp" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingRight="@dimen/ten_dp"
                    android:paddingTop="@dimen/five_dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:gravity="right"
                android:orientation="horizontal">


                <com.jim.mpviews.MpButton
                    android:layout_width="@dimen/hundred_fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:text="Cancel"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MpButton
                    android:layout_width="@dimen/hundred_fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:text="Save"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/sixteen_dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:layout_marginLeft="@dimen/sixty_dp"
                android:text="2 step of 2"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/eighteen_dp" />

            <FrameLayout
                android:layout_width="5px"
                android:layout_height="match_parent"
                android:background="#e1e1e1" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>