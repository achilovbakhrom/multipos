<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_eight_dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textSize="@dimen/eighteen_dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_eight_dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/twenty_five_dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textSize="@dimen/eighteen_dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_eight_dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textSize="@dimen/eighteen_dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_eight_dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/twenty_five_dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textSize="@dimen/sixteen_dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_eight_dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:textSize="@dimen/eighteen_dp"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:tint="@color/colorBlue"
                android:src="@drawable/refresh"
                />
        </LinearLayout>

        <com.jim.mpviews.MpSpinner
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_eight_dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/twenty_dp"
           />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/ten_dp"
            android:src="@drawable/save"
            android:tint="@color/colorTintGrey"
            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/five_dp"
            android:paddingRight="@dimen/ten_dp"
            android:src="@drawable/delete"
            android:tint="@color/colorTintGrey"
            />


    </LinearLayout>


</LinearLayout>