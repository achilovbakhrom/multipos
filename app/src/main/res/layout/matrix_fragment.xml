<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="43"
            android:background="@color/colorBackgroundGrey"
            android:orientation="vertical">

            <com.jim.mpviews.MpSwitcher
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:paddingBottom="@dimen/five_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:paddingTop="40dp"
                app:text_left="Child"
                app:text_right="Parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:layout_marginLeft="55dp"
                android:text="Parent Product"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty_eight_dp"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="50dp"
                android:drawableTint="#e1e1e1"
                android:hint="Name, SKU or Barcode"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="@dimen/thirty_dp" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>