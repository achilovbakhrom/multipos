<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_ten_dp"
        android:background="@color/colorBackground"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/three_hundred_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/twenty_dp"
                android:text="Logitech"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/forty_dp"
                android:text="ID: 126305"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/eighteen_dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/forty_dp"
                android:text="Tel: +91456643143"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/eighteen_dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/forty_dp"
                android:text="Products count: 546"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/eighteen_dp"
                android:textStyle="italic" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorGrey" />

        <TextView
            android:layout_width="@dimen/two_hundred_sixty_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingLeft="@dimen/twenty_dp"
            android:text="Logitech mouse"
            android:textColor="@color/colorMainText" />

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorGrey" />

        <RelativeLayout
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ten_dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingRight="@dimen/twenty_dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Local" />

            <ImageView
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/chain" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorGrey" />

        <TextView
            android:layout_width="@dimen/two_hundred_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="@dimen/twenty_dp"
            android:text="128.0000"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorGrey" />

        <LinearLayout
            android:layout_width="@dimen/hundred_ten_dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.jim.mpviews.MpRoller
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/ten_dp"
                android:gravity="center"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp">

                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/five_dp"
                    android:src="@drawable/currency_btn" />

                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/five_dp"
                    android:src="@drawable/payments_btn" />

                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/five_dp"
                    android:src="@drawable/history_btn" />

                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/five_dp"
                    android:src="@drawable/order_list_btn" />

                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:src="@drawable/truck_btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp">

                <TextView
                    android:layout_width="@dimen/hundred_thirty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/five_dp"
                    android:background="@drawable/blue_stroke_2"
                    android:gravity="center"
                    android:text="More"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/sixteen_dp" />

                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/five_dp"
                    android:src="@drawable/expense" />

                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:src="@drawable/income" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorGrey" />

</LinearLayout>