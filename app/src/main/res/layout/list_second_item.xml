<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_height="@dimen/fifty_dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginRight="@dimen/hundred_sixty_dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shinny"
                android:layout_marginBottom="@dimen/five_dp"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKU:07842"
                android:textColor="@color/colorTintGrey"
                android:textSize="@dimen/eighteen_dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="@dimen/five_dp"
            android:text="101.00 pcs"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="@dimen/thirty_dp"
            android:paddingLeft="@dimen/fifteen_dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="30 000.00 uzs"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"/>

</LinearLayout>