<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mpMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/mpLeftSide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="43"
            android:background="@drawable/background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:paddingTop="@dimen/ten_dp"
                android:src="@drawable/posmen" />

            <ImageView
                android:id="@+id/mpSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/eighteen_dp"
                android:layout_toLeftOf="@+id/mpHorRoller"
                android:src="@drawable/settings_blue" />

            <com.jim.mpviews.MpHorizontalScroller
                android:id="@+id/mpHorRoller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/twenty_dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mpRightSide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="57"
            android:background="@drawable/background_light">

            <LinearLayout
                android:id="@+id/mpMainMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mpProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mpProfilePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginRight="@dimen/fifteen_dp"
                        android:src="@drawable/no_photo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mpEmpName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Somebody"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/mpEmpRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Some role"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20000000" />

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20ffffff" />

                <LinearLayout
                    android:id="@+id/mpProducts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/four_dp"
                        android:src="@drawable/market"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Product"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20000000" />

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20ffffff" />

                <LinearLayout
                    android:id="@+id/mpReports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/four_dp"
                        android:src="@drawable/reports"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Reports"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20000000" />

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20ffffff" />

                <LinearLayout
                    android:id="@+id/mpEmployers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/four_dp"
                        android:src="@drawable/employers"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Employers"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20000000" />

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20ffffff" />

                <LinearLayout
                    android:id="@+id/mpCustomers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/four_dp"
                        android:src="@drawable/customer_group"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Customers"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20000000" />

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20ffffff" />

                <LinearLayout
                    android:id="@+id/mpInventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/four_dp"
                        android:src="@drawable/inventory"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Inventory"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/blackLine"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20000000"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/whiteLine"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20ffffff"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/mpInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/info" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20000000" />

                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#20ffffff" />

                <LinearLayout
                    android:id="@+id/mpSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/search_2" />
                </LinearLayout>

            </LinearLayout>

            <com.jim.mpviews.MpSearchView
                android:id="@+id/mpSearchView"
                android:layout_width="@dimen/two_hundred_thirty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/thirty_dp"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>


</merge>